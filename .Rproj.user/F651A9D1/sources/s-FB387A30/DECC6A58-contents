# Create website using 'bookdown'
# https://bookdown.org/yihui/blogdown/installation.html
# date: 28/7/18

install.packages('bookdown')
blogdown::install_hugo()
blogdown::update_hugo()
blogdown::hugo_version()

getwd()
setwd("C:/Users/subham-lenovo/Documents/website-sk/my-website")
# after creating the project folder
blogdown::new_site(dir = ".",
                   theme = "gcushen/hugo-academic")
blogdown::serve_site()

# see:
#   https://sourcethemes.com/academic/docs/install/#install-with-rstudio

